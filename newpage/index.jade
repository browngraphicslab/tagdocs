                        p Getting set up
                        .links
                            ul
                                +sectionLink('Debugging',          'debugging')
                                +sectionLink('Developer Guide',    'developer')
                                +sectionLink('Git and Github',     'git')
                                +sectionLink('Grunt Notes',        'grunt')
                                +sectionLink('Jade Workshop',      'jade')
                                +sectionLink('Javascript Workshop','javascript')
                                +sectionLink('JS Hint Notes',      'jshint')
                                +sectionLink('Local Web Servers',  'webservers')
                                +sectionLink('Starter Projects',   'starter')
                                +sectionLink('Stylus Workshop',    'stylus')
                                +sectionLink('Testing Notes',      'testing')
                                +sectionLink('Web App Workflow',   'webappworkflow')
                                +sectionLink('YUIDoc',             'yuidoc')
                .linkContain#nav_links
                    .title
                        p Links
                        .links
                            ul
                                +sectionLink('Web App Links',      'webapp')
                                +sectionLink('JS Fiddle Links',    'jsfiddle')
                                +sectionLink('Tools',              'tools')
                                +sectionLink('Stuff.js',           'stuffjs')
                                +sectionLink('CSS Tips',           'csstips')
                                +sectionLink('Jade examples',      'jadeexamples')
                .linkContain#nav_misc
                    .title
                        p Miscellaneous
                        .links
                            ul
                                +sectionLink('CSS Alphabetizer',      'cssalphabetizer')
                                +sectionLink('Ink Path Smoothing',    '#pathsmoothing')
                                +sectionLink('Jade/Stylus Factoring', '#factoring')
